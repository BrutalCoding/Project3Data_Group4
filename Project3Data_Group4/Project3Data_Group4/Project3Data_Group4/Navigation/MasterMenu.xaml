<?xml version="1.0" encoding="UTF-8"?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms" 
					xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
					x:Class="Project3Data_Group4.Navigation.MasterMenu"
          xmlns:local="clr-namespace:Project3Data_Group4.Navigation;assembly=Project3Data_Group4"
					Title="Welkom">
  <MasterDetailPage.Master>
    <ContentPage Title="Menu">
      <ListView x:Name="MasterMenuNavMaster">
        <ListView.ItemTemplate>
          <DataTemplate>
            <TextCell Text="{Binding LijstItemNaam}" />
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </ContentPage>
  </MasterDetailPage.Master>

  <MasterDetailPage.Detail>
    <ContentPage Title="Details">
      <ListView x:Name="MasterMenuNavDetail">
        <ListView.ItemTemplate>
          <DataTemplate>
            <TextCell Text="{Binding LijstItemNaam}" />
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </ContentPage>
  </MasterDetailPage.Detail>
</MasterDetailPage>